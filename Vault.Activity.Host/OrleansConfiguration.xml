    <SeedNode Address="localhost" Port="11111" />
    <ReminderService ReminderServiceType="ReminderTableGrain" />
    <StorageProviders>
      <Provider Type="Orleans.Storage.MemoryStorage" Name="Default" />
      <Provider Type="Orleans.Storage.MemoryStorage" Name="MemoryStorage" />
      <Provider Type="Orleans.Storage.MemoryStorage" Name="PubSubStore" />
    </StorageProviders>
    <StreamProviders>
      <Provider Type="Orleans.Providers.Streams.SimpleMessageStream.SimpleMessageStreamProvider" Name="ActivityProvider" />
    </StreamProviders>
    <BootstrapProviders>
      <Provider Type="Vault.Activity.Host.Bootstrap" Name="Activity" />
    </BootstrapProviders>
  </Globals>
  <Defaults>
    <Networking Address="localhost" Port="11111" />
    <ProxyingGateway Address="localhost" Port="30000" />
    <Startup Type="Vault.Activity.Host.Startup,Vault.Activity.Host" />
  </Defaults>
</OrleansConfiguration>