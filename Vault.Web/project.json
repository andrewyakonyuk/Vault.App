  "commands": {
    "web": "Microsoft.AspNetCore.Server.Kestrel"
  },

  "exclude": [
    "wwwroot",
    "node_modules"
  ],
  "frameworks": {
    "net451": {
      "frameworkAssemblies": {
        "System.Runtime.Serialization": "4.0.0.0"
      }
    }
  },
  "packExclude": [
    "**.xproj",
    "**.user",
    "**.vspscc"
  ],
  "publishOptions": {
    "include": [
      "Views",
      "web.config",
      "wwwroot"
    ],
    "exclude": [
      "**.user",
      "**.vspscc"
    ]
  }
