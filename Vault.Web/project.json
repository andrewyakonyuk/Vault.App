    "System.Collections.Immutable": "1.3.1",
    "System.Reflection.Metadata": "1.4.2",
    "Vault.Activity": "1.0.0-*",
    "Vault.Shared": "1.0.0-*",
    "Vault.Shared.Authentication.Pocket": "1.0.0-*",
    "Vault.Shared.Connectors.Pocket": "1.0.0-*",
    "Vault.Shared.Identity": "1.0.0-*",
    "Vault.Shared.NHibernate": "1.0.0-*",
    "Vault.Shared.Search": "1.0.0-*",
    "Vault.Shared.Search.Lucene": "1.0.0-*",
    "Vault.Shared.TransientFaultHandling": "1.0.0-*",
    "Microsoft.AspNetCore.Html.Abstractions": "1.1.1" 
